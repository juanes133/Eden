<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LoginFragment">

    <ImageView
        android:id="@+id/ic_icon"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_icon_principal"
        app:layout_constraintBottom_toTopOf="@+id/btngoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/eden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenidos_a_eden"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ic_icon" />


    <TextView
        android:id="@+id/btngoogle"
        style="@style/ButtonGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registrate_con_google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eden" />

    <ImageView
        android:id="@+id/ic_google"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:backgroundTintMode="src_in"
        android:backgroundTint="@color/white"
        android:src="@mipmap/ic_ic_ggo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btngoogle"
        app:layout_constraintTop_toBottomOf="@+id/eden" />


</androidx.constraintlayout.widget.ConstraintLayout>