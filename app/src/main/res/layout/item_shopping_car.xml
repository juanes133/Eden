<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/itemShopping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/ivCannabis"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/ic_icon_principal" />

            <TextView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/espace_horizontal"
                android:layout_marginVertical="@dimen/espace_vertical"
                android:text="@string/eliminar"
                android:textColor="@color/red"
                android:textSize="@dimen/subtitle"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivCannabis" />

            <TextView
                android:id="@+id/tvNamePlant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ivCannabis"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/blueberry" />

            <Button
                android:id="@+id/btnAmount"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/espace_vertical"
                android:text="@string/cantidad"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:icon="@mipmap/ic_down"
                app:iconGravity="end"
                app:layout_constraintStart_toEndOf="@+id/ivCannabis"
                app:layout_constraintTop_toBottomOf="@id/tvNamePlant" />

            <TextView
                android:id="@+id/descriptionPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/espace_vertical"
                android:textColor="@color/black"
                android:textSize="@dimen/subtitle"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/btnAmount"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnAmount"
                app:layout_constraintTop_toBottomOf="@+id/tvNamePlant"
                tools:text="17_85_g" />

            <TextView
                android:id="@+id/addProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/desea_agregar_mas_productos"
                android:textColor="@color/colorPrimary"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ivCannabis"
                app:layout_constraintTop_toBottomOf="@+id/ivCannabis" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>